{
    "name": "express-ts-template",
    "version": "1.2.0",
    "description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
    "main": "server.js",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "dev": "ts-node-dev src/server.ts",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "nodemon dist/server.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "lint-fix": "yarn lint --fix",
        "debug": "yarn run build && yarn run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@line/bot-sdk": "^7.4.0",
        "@prisma/client": "3.1.1",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.1",
        "@types/moment": "^2.13.0",
        "@types/moment-timezone": "^0.5.30",
        "@types/node-cron": "^2.0.4",
        "@types/shortid": "^0.0.29",
        "axios": "^0.21.4",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "dayjs": "^1.10.7",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.6",
        "express": "^4.16.2",
        "http-errors": "^1.7.1",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.33",
        "morgan": "^1.9.1",
        "node-cron": "^3.0.0",
        "pug": "^3.0.1",
        "shortid": "^2.2.16"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/http-errors": "1.8.1",
        "@types/jest": "26.0.24",
        "@types/morgan": "1.9.3",
        "@types/node": "14.17.15",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "4.31.0",
        "@typescript-eslint/parser": "4.31.0",
        "concurrently": "6.2.1",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.24.2",
        "jest": "26.6.3",
        "nodemon": "2.0.12",
        "prettier": "2.4.0",
        "prisma": "^3.1.1",
        "supertest": "6.1.6",
        "ts-jest": "26.5.6",
        "ts-node-dev": "^1.1.8",
        "typescript": "4.4.3"
    }
}
